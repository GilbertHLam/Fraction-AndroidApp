<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gilberthlam.com.fractionsimplifier.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter any fraction"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/topLabel" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="1dp"
        android:id="@+id/line"
        android:layout_below="@+id/numerBox"
        android:layout_alignLeft="@+id/numerBox"
        android:layout_alignStart="@+id/numerBox"
        android:layout_alignRight="@+id/numerBox"
        android:layout_alignEnd="@+id/numerBox" />

    <Button
        android:text="Simplify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denomBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/simplifyButton"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simplifyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/statusLabel"
        android:textStyle="normal|bold"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Denominator"
        android:ems="10"
        android:id="@+id/denomBox"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textColorLink="@android:color/transparent"
        android:layout_below="@+id/line"
        android:layout_alignLeft="@+id/line"
        android:layout_alignStart="@+id/line" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Numerator"
        android:ems="10"
        android:background="@android:color/transparent"
        android:id="@+id/numerBox"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="64dp"
        android:textColorLink="@android:color/transparent"
        android:layout_below="@+id/topLabel"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
